{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "deno",
      "command": "run",
      "args": [
        "--allow-env=AIRTABLE_BASE_ID,AIRTABLE_API_KEY",
        "--allow-net=api.airtable.com",
        "--allow-read=.",
        "--allow-write=.",
        "./src/mod.ts",
        "--outputDir=./dist"
      ],
      "problemMatcher": [
        "$deno"
      ],
      "label": "deno: run"
    },
    {
      "type": "deno",
      "command": "compile",
      "args": [
        "--allow-env=AIRTABLE_BASE_ID,AIRTABLE_API_KEY",
        "--allow-net=api.airtable.com",
        "--allow-read=.",
        "--allow-write=.",
        "--output=lda-export",
        "./src/mod.ts"
      ],
      "problemMatcher": [
        "$deno"
      ],
      "label": "deno: compile"
    }
  ]
}
